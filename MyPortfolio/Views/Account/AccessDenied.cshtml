@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-lg mt-5">
                <div class="card-body p-5 text-center">
                    <div class="error-icon text-danger mb-4">
                        <i class="fas fa-exclamation-circle fa-5x"></i>
                    </div>
                    <h1 class="h3 mb-3">Access Denied</h1>
                    <p class="text-muted mb-4">
                        You do not have permission to access this resource.
                        Please contact the administrator if you believe this is an error.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Return to Portfolio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>