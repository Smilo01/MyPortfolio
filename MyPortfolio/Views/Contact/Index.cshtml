@model Contact

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Get In Touch</h2>
                    <p class="text-center text-muted mb-4">Have a project in mind or just want to say hello? I'd love to hear from you!</p>

                    <form asp-controller="Contact" asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <!-- Name Field -->
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Your Name" required />
                                    <label asp-for="Name">Your Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        Please enter your name.
                                    </div>
                                </div>
                            </div>

                            <!-- Email Field -->
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required />
                                    <label asp-for="Email">Email Address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                </div>
                            </div>

                            <!-- Subject Field -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject" required />
                                    <label asp-for="Subject">Subject</label>
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        Please enter a subject.
                                    </div>
                                </div>
                            </div>

                            <!-- Message Field -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Message" class="form-control" placeholder="Your message" style="height: 150px" required></textarea>
                                    <label asp-for="Message">Your Message</label>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        Please enter your message.
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100 py-3">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row mt-5 g-4">
                <div class="col-md-4">
                    <div class="card h-100 text-center p-4">
                        <i class="fas fa-envelope fa-2x text-primary mb-3"></i>
                        <h5>Email</h5>
                        <p class="mb-0">zikhalismilo01@gmail.com</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 text-center p-4">
                        <i class="fas fa-phone fa-2x text-primary mb-3"></i>
                        <h5>Phone</h5>
                        <p class="mb-0">(+27) 711088484</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 text-center p-4">
                        <i class="fas fa-map-marker-alt fa-2x text-primary mb-3"></i>
                        <h5>Location</h5>
                        <p class="mb-0">South Africa</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
